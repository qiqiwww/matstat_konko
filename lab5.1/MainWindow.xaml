<Window x:Class="BestOil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BestOil - Автозаправка та Міні-Кафе" 
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E3A5F">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Arial"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#FFFFA500"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Ліва частина - Автозаправка -->
        <Border Grid.Column="0" Background="#FF2A4A7A" CornerRadius="10" Padding="15">
            <StackPanel>
                <TextBlock Text="АВТОЗАПРАВКА" FontSize="20" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Вибор пального -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Пальне" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CmbFuelType" Height="30" 
                             SelectionChanged="CmbFuelType_SelectionChanged">
                        <ComboBoxItem Content="А-95" IsSelected="True"/>
                        <ComboBoxItem Content="А-92"/>
                        <ComboBoxItem Content="Дизель"/>
                        <ComboBoxItem Content="Газ"/>
                    </ComboBox>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Ціна:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtFuelPrice" Grid.Column="2" Text="6,40 грн." 
                                  FontWeight="Bold" Foreground="#FFFFA500"/>
                    </Grid>
                </StackPanel>

                <!-- Вибір типу оплати -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Тип оплати" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

                    <RadioButton x:Name="RbByLiters" Content="За кількістю літрів" 
                                IsChecked="True" Checked="RbByLiters_Checked" Margin="0,5"/>
                    <Grid Margin="20,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Кількість:" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtLiters" Grid.Column="2" Text="0" TextChanged="TxtLiters_TextChanged"
                                IsEnabled="True"/>
                    </Grid>

                    <RadioButton x:Name="RbByMoney" Content="За сумою грошей" 
                                Checked="RbByMoney_Checked" Margin="0,5"/>
                    <Grid Margin="20,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Сума:" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtMoney" Grid.Column="2" Text="0" TextChanged="TxtMoney_TextChanged"
                                IsEnabled="False"/>
                    </Grid>
                </StackPanel>

                <!-- Результати для пального -->
                <Border Background="#FF1E3A5F" CornerRadius="5" Padding="10">
                    <StackPanel>
                        <TextBlock x:Name="TxtFuelResultTitle" Text="До оплати:" 
                                  FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="TxtFuelResult" Grid.Column="0" Text="0,00" 
                                      FontSize="18" FontWeight="Bold" Foreground="#FFFFA500"/>
                            <TextBlock x:Name="TxtFuelUnit" Grid.Column="1" Text="грн." 
                                      FontSize="14" Margin="5,0,0,0" VerticalAlignment="Bottom"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Центральна частина - Міні-Кафе -->
        <Border Grid.Column="2" Background="#FF2A4A7A" CornerRadius="10" Padding="15">
            <StackPanel>
                <TextBlock Text="МІНІ-КАФЕ" FontSize="20" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Список товарів -->
                <StackPanel>
                    <!-- Хот-дог -->
                    <Border BorderBrush="#FF4A6BA5" BorderThickness="0,0,0,1" Padding="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="CbHotDog" Grid.Column="0" Margin="0,0,10,0"
                                     Checked="CafeItem_Checked" Unchecked="CafeItem_Checked"/>
                            <TextBlock Grid.Column="1" Text="Хот-дог" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Text="4,00" IsEnabled="False" Background="#FF1E3A5F" 
                                    Foreground="White" BorderThickness="0"/>
                            <TextBlock Grid.Column="3" Text="x" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBox x:Name="TxtHotDogQty" Grid.Column="4" Text="0" TextChanged="CafeQty_TextChanged"
                                    IsEnabled="False"/>
                        </Grid>
                    </Border>

                    <!-- Гамбургер -->
                    <Border BorderBrush="#FF4A6BA5" BorderThickness="0,0,0,1" Padding="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="CbHamburger" Grid.Column="0" Margin="0,0,10,0"
                                     Checked="CafeItem_Checked" Unchecked="CafeItem_Checked"/>
                            <TextBlock Grid.Column="1" Text="Гамбургер" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Text="5,40" IsEnabled="False" Background="#FF1E3A5F" 
                                    Foreground="White" BorderThickness="0"/>
                            <TextBlock Grid.Column="3" Text="x" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBox x:Name="TxtHamburgerQty" Grid.Column="4" Text="0" TextChanged="CafeQty_TextChanged"
                                    IsEnabled="False"/>
                        </Grid>
                    </Border>

                    <!-- Картопля-фрі -->
                    <Border BorderBrush="#FF4A6BA5" BorderThickness="0,0,0,1" Padding="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="CbFries" Grid.Column="0" Margin="0,0,10,0"
                                     Checked="CafeItem_Checked" Unchecked="CafeItem_Checked"/>
                            <TextBlock Grid.Column="1" Text="Картопля-фрі" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Text="7,20" IsEnabled="False" Background="#FF1E3A5F" 
                                    Foreground="White" BorderThickness="0"/>
                            <TextBlock Grid.Column="3" Text="x" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBox x:Name="TxtFriesQty" Grid.Column="4" Text="0" TextChanged="CafeQty_TextChanged"
                                    IsEnabled="False"/>
                        </Grid>
                    </Border>

                    <!-- Кока-кола -->
                    <Border BorderBrush="#FF4A6BA5" BorderThickness="0,0,0,1" Padding="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="CbCola" Grid.Column="0" Margin="0,0,10,0"
                                     Checked="CafeItem_Checked" Unchecked="CafeItem_Checked"/>
                            <TextBlock Grid.Column="1" Text="Кока-кола" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Text="4,40" IsEnabled="False" Background="#FF1E3A5F" 
                                    Foreground="White" BorderThickness="0"/>
                            <TextBlock Grid.Column="3" Text="x" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBox x:Name="TxtColaQty" Grid.Column="4" Text="0" TextChanged="CafeQty_TextChanged"
                                    IsEnabled="False"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Підсумок кафе -->
                <Border Background="#FF1E3A5F" CornerRadius="5" Padding="10" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="Сума за кафе:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtCafeTotal" Text="0,00 грн." FontSize="16" FontWeight="Bold" 
                                  Foreground="#FFFFA500"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Права частина - Підсумок -->
        <Border Grid.Column="4" Background="#FF2A4A7A" CornerRadius="10" Padding="15">
            <StackPanel>
                <TextBlock Text="ДО СПЛАТИ" FontSize="20" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Деталізація -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Деталізація:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Пальне:"/>
                        <TextBlock x:Name="TxtFuelDetail" Grid.Column="1" Text="0,00 грн."/>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Кафе:"/>
                        <TextBlock x:Name="TxtCafeDetail" Grid.Column="1" Text="0,00 грн."/>
                    </Grid>

                    <Border BorderBrush="#FF4A6BA5" BorderThickness="0,1,0,0" Margin="0,10,0,0" Padding="0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ВСЬОГО:" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="TxtTotal" Grid.Column="1" Text="0,00 грн." 
                                      FontWeight="Bold" FontSize="16" Foreground="#FFFFA500"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Кнопки управління -->
                <Button x:Name="BtnCalculate" Content="ПРОРАХУВАТИ" 
                       Click="BtnCalculate_Click" FontWeight="Bold" FontSize="16"
                       Background="#FFFFA500" Height="40" Margin="0,10,0,5"/>

                <Button x:Name="BtnNewCustomer" Content="НОВИЙ КЛІЄНТ" 
                       Click="BtnNewCustomer_Click" Background="#FF4A6BA5" Margin="0,5"/>

                <Button x:Name="BtnDailyReport" Content="ЗВІТ ЗА ДЕНЬ" 
                       Click="BtnDailyReport_Click" Background="#FF4A6BA5" Margin="0,5"/>

                <!-- Загальна виручка -->
                <Border Background="#FF1E3A5F" CornerRadius="5" Padding="10" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Виручка за день:" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtDailyRevenue" Text="0,00 грн." FontSize="16" 
                                  FontWeight="Bold" Foreground="#FF90EE90"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
