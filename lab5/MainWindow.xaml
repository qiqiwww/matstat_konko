<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="500" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#FFE1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхні текстові поля -->
        <Border Grid.Row="0" Background="#FF333333" Margin="10,10,10,0" CornerRadius="5">
            <TextBox x:Name="DisplayOperation" 
                     Height="35" 
                     FontSize="14" 
                     IsReadOnly="True" 
                     TextAlignment="Right" 
                     VerticalContentAlignment="Center"
                     Background="Transparent" 
                     Foreground="#FFCCCCCC"
                     BorderThickness="0"
                     Text=""/>
        </Border>

        <Border Grid.Row="1" Background="#FF333333" Margin="10,5,10,10" CornerRadius="5">
            <TextBox x:Name="DisplayCurrent" 
                     Height="65" 
                     FontSize="32" 
                     IsReadOnly="True" 
                     TextAlignment="Right" 
                     VerticalContentAlignment="Center"
                     Background="Transparent" 
                     Foreground="White"
                     BorderThickness="0"
                     Text="0"/>
        </Border>

        <!-- Панель з кнопками -->
        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Перший рядок - Функції -->
            <Button x:Name="BtnClearEntry" Grid.Row="0" Grid.Column="0" 
                    Content="CE" Click="BtnClearEntry_Click"/>
            <Button x:Name="BtnClear" Grid.Row="0" Grid.Column="1" 
                    Content="C" Click="BtnClear_Click"/>
            <Button x:Name="BtnBackspace" Grid.Row="0" Grid.Column="2" 
                    Content="⌫" Click="BtnBackspace_Click"/>
            <Button x:Name="BtnDivide" Grid.Row="0" Grid.Column="3" 
                    Content="/" Click="Operation_Click"/>

            <!-- Другий рядок -->
            <Button x:Name="Btn7" Grid.Row="1" Grid.Column="0" 
                    Content="7" Click="Number_Click"/>
            <Button x:Name="Btn8" Grid.Row="1" Grid.Column="1" 
                    Content="8" Click="Number_Click"/>
            <Button x:Name="Btn9" Grid.Row="1" Grid.Column="2" 
                    Content="9" Click="Number_Click"/>
            <Button x:Name="BtnMultiply" Grid.Row="1" Grid.Column="3" 
                    Content="×" Click="Operation_Click"/>

            <!-- Третій рядок -->
            <Button x:Name="Btn4" Grid.Row="2" Grid.Column="0" 
                    Content="4" Click="Number_Click"/>
            <Button x:Name="Btn5" Grid.Row="2" Grid.Column="1" 
                    Content="5" Click="Number_Click"/>
            <Button x:Name="Btn6" Grid.Row="2" Grid.Column="2" 
                    Content="6" Click="Number_Click"/>
            <Button x:Name="BtnSubtract" Grid.Row="2" Grid.Column="3" 
                    Content="-" Click="Operation_Click"/>

            <!-- Четвертий рядок -->
            <Button x:Name="Btn1" Grid.Row="3" Grid.Column="0" 
                    Content="1" Click="Number_Click"/>
            <Button x:Name="Btn2" Grid.Row="3" Grid.Column="1" 
                    Content="2" Click="Number_Click"/>
            <Button x:Name="Btn3" Grid.Row="3" Grid.Column="2" 
                    Content="3" Click="Number_Click"/>
            <Button x:Name="BtnAdd" Grid.Row="3" Grid.Column="3" 
                    Content="+" Click="Operation_Click"/>

            <!-- П'ятий рядок -->

            <Button x:Name="BtnDecimal" Grid.Row="4" Grid.Column="0" 
                    Content="." Click="BtnDecimal_Click"/>
            <Button x:Name="Btn0" Grid.Row="4" Grid.Column="1" 
                    Content="0" Click="Number_Click"/>
            <Button x:Name="BtnEquals" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2"
                    Content="=" Click="BtnEquals_Click"/>


        </Grid>
    </Grid>
</Window>