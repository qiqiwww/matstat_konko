<Window x:Class="JobCandidatesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конкурс на вакансію" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Ліва панель - список кандидатів -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Список кандидатів" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox Grid.Row="1" x:Name="CandidatesListBox" 
                     ItemsSource="{Binding Candidates}" 
                     SelectedItem="{Binding SelectedCandidate, Mode=TwoWay}"
                     Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding FullName}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding BirthYear, StringFormat='Рік народження: {0}'}" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Фільтр:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="FilterComboBox" 
                          SelectedIndex="{Binding FilterIndex, Mode=TwoWay}"
                          SelectionChanged="FilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="Усі кандидати"/>
                    <ComboBoxItem Content="З вищою освітою"/>
                    <ComboBoxItem Content="Володіють комп'ютером"/>
                    <ComboBoxItem Content="Зі знанням англійської"/>
                    <ComboBoxItem Content="З рекомендаціями"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Додати" Width="80" Margin="5" Click="AddButton_Click"/>
                <Button Content="Видалити" Width="80" Margin="5" Click="DeleteButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Права панель - деталі кандидата -->
        <Grid Grid.Column="1" Margin="10" DataContext="{Binding SelectedCandidate}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Інформація про кандидата" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="П.І.П.:" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

                    <TextBlock Text="Рік народження:" Margin="0,10,0,2"/>
                    <DatePicker SelectedDate="{Binding BirthDate, Mode=TwoWay}" 
                                DisplayDateEnd="{Binding MaxDate}"
                                Padding="5"/>

                    <TextBlock Text="Освіта:" Margin="0,10,0,2"/>
                    <ComboBox SelectedItem="{Binding Education, Mode=TwoWay}" Padding="5">
                        <ComboBoxItem Content="Середня"/>
                        <ComboBoxItem Content="Середня спеціальна"/>
                        <ComboBoxItem Content="Вища"/>
                    </ComboBox>

                    <TextBlock Text="Іноземні мови:" Margin="0,10,0,5"/>
                    <StackPanel Margin="10,0,0,0">
                        <CheckBox Content="Англійська" IsChecked="{Binding KnowsEnglish, Mode=TwoWay}" Margin="0,2"/>
                        <ComboBox IsEnabled="{Binding KnowsEnglish}" 
                                  SelectedItem="{Binding EnglishLevel, Mode=TwoWay}" 
                                  Margin="20,2,0,5" Width="200" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Володію вільно"/>
                            <ComboBoxItem Content="Читаю та перекладаю зі словником"/>
                        </ComboBox>

                        <CheckBox Content="Німецька" IsChecked="{Binding KnowsGerman, Mode=TwoWay}" Margin="0,2"/>
                        <ComboBox IsEnabled="{Binding KnowsGerman}" 
                                  SelectedItem="{Binding GermanLevel, Mode=TwoWay}" 
                                  Margin="20,2,0,5" Width="200" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Володію вільно"/>
                            <ComboBoxItem Content="Читаю та перекладаю зі словником"/>
                        </ComboBox>

                        <CheckBox Content="Французька" IsChecked="{Binding KnowsFrench, Mode=TwoWay}" Margin="0,2"/>
                        <ComboBox IsEnabled="{Binding KnowsFrench}" 
                                  SelectedItem="{Binding FrenchLevel, Mode=TwoWay}" 
                                  Margin="20,2,0,5" Width="200" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Володію вільно"/>
                            <ComboBoxItem Content="Читаю та перекладаю зі словником"/>
                        </ComboBox>
                    </StackPanel>

                    <CheckBox Content="Володію комп'ютером" 
                              IsChecked="{Binding HasComputerSkills, Mode=TwoWay}" 
                              Margin="0,10,0,5"/>

                    <TextBlock Text="Стаж роботи (років):" Margin="0,10,0,2"/>
                    <TextBox Text="{Binding WorkExperience, UpdateSourceTrigger=PropertyChanged}" 
                             PreviewTextInput="NumberValidationTextBox" 
                             Padding="5"/>

                    <CheckBox Content="Наявність рекомендацій" 
                              IsChecked="{Binding HasRecommendations, Mode=TwoWay}" 
                              Margin="0,10,0,5"/>

                    <Button Content="Зберегти зміни" Width="150" Margin="0,20,0,0" 
                            Click="SaveButton_Click" HorizontalAlignment="Left"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
